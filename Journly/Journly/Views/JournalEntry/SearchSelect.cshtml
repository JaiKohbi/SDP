@using Journly.Models.ViewModels
@model IEnumerable<Journly.Models.Journal>
@{
    ViewBag.Title = "ViewJournals";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Select Journal to Search</h2>

<div class="form-group">
    <p class="btn btn-success">@Html.ActionLink("Search All Journals", "SearchResults", "JournalEntry")</p>
</div>

@if (!Model.Any())
{
    <p>You have no Journals</p>
}
else
{
    <table class="table table-bordered table-hover">
        <thead>
        <tr>
            <th>Title</th>
            <th>Date Created</th>
            <th>Id</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var jrn in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink(jrn.Title, "SearchResults", "JournalEntry", new {id = jrn.Id} , null)
                </td>
                <td>
                    @jrn.CreationDate.ToString()
                </td>
                <td>@jrn.Id</td>
            </tr>
        }
        </tbody>
    </table>
}